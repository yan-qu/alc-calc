<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buttonpage">

    <ImageButton
        android:id="@+id/shotButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="115dp"
        android:contentDescription="image of shot"
        app:layout_constraintBottom_toTopOf="@+id/wineButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beerButton"
        app:srcCompat="#2196F3" />

    <ImageButton
        android:id="@+id/wineButton"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginBottom="47dp"
        android:contentDescription="image of wine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shotButton"
        app:srcCompat="#E91E63" />

    <ImageButton
        android:id="@+id/beerButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="115dp"
        android:contentDescription="image of beer"
        app:layout_constraintBottom_toTopOf="@+id/shotButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent" />
</androidx.constraintlayout.widget.ConstraintLayout>